# Traefik Configuration
ONENOTE_DOMAIN=onenote.example.com
CERT_RESOLVER=letsencrypt

# Azure App Registration (REQUIRED)
# Get these from https://portal.azure.com -> App Registrations
ONENOTE_CLIENT_ID=c546232f-5556-4213-8728-f39da001b861
ONENOTE_TENANT_ID=common
# Note: Update this to your HTTPS domain for production
ONENOTE_REDIRECT_URI=https://onenote.example.com/callback

# Default notebook for operations
ONENOTE_DEFAULT_NOTEBOOK_NAME=My Notebook

# Available toolsets: notebooks,sections,pages,content
ONENOTE_TOOLSETS=notebooks,sections,pages,content

# Authorization system
AUTHORIZATION_ENABLED=false
AUTHORIZATION_DEFAULT_MODE=read

# MCP Authentication (required for HTTP mode)
MCP_AUTH_ENABLED=true
MCP_BEARER_TOKEN=aaa

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text
CONTENT_LOG_LEVEL=INFO
